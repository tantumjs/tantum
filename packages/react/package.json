{
  "name": "@tantum/react",
  "version": "0.0.0",
  "main": "lib/index.js",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "dependencies": {
    "@tantum/babel": "^0.0.0",
    "@tantum/core": "^0.0.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-hot-loader": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.7",
    "jest": "^24.1.0",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  },
  "scripts": {
    "test": "jest --coverage",
    "compile": "rm -rf lib && tsc --p tsconfig.publish.json"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.test\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/__tests__/helpers.ts"
    ]
  }
}
