{
  "name": "@tantum/core",
  "version": "0.1.0",
  "main": "lib/index.js",
  "license": "MIT",
  "dependencies": {
    "webpack": "^4.29.5"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.7",
    "@types/webpack": "^4.4.24",
    "jest": "^24.1.0",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  },
  "scripts": {
    "test": "jest --coverage",
    "compile": "tsc --p tsconfig.publish.json"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.test\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/__tests__/helpers.ts"
    ]
  }
}
